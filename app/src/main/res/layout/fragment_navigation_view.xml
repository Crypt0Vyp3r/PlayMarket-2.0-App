<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="50dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/close_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:rotation="45"
                android:tint="@color/nav_text_color"
                app:srcCompat="@drawable/add" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                app:srcCompat="@drawable/account" />

        </RelativeLayout>

        <TextView
            android:id="@+id/user_id_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            tools:text="0xada5188f4f58ece74cc367cc606b6257554187ce"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ether_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                tools:text="14.9"
                android:textColor="@color/nav_text_color"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:tint="@color/nav_text_color"
                app:srcCompat="@drawable/eth_big" />

        </LinearLayout>

        <Button
            android:id="@+id/account_top_up_button"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/top_up_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/account_top_up"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/library_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_drawer_menu_height"
                android:layout_marginBottom="@dimen/navigation_view_indents"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    style="@style/navViewImageItem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/book" />

                <TextView
                    style="@style/navViewTextItem"
                    android:gravity="center_vertical"
                    android:text="@string/library" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_drawer_menu_height"
                android:layout_marginBottom="@dimen/navigation_view_indents"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    style="@style/navViewImageItem"
                    app:srcCompat="@drawable/cog" />

                <TextView
                    style="@style/navViewTextItem"
                    android:text="@string/settings" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_drawer_menu_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/navViewImageItem"
                    app:srcCompat="@drawable/ask" />

                <TextView
                    style="@style/navViewTextItem"
                    android:text="@string/about" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:id="@+id/wishlist_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_drawer_menu_height"
                android:layout_marginBottom="@dimen/navigation_view_indents"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/navViewImageItem"
                    app:srcCompat="@drawable/like" />

                <TextView
                    android:textColor="@color/greyBackground"
                    style="@style/navViewTextItem"
                    android:text="@string/wishlist" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/news_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_drawer_menu_height"
                android:layout_marginBottom="@dimen/navigation_view_indents"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/navViewImageItem"
                    app:srcCompat="@drawable/speak" />

                <TextView
                    android:textColor="@color/greyBackground"
                    style="@style/navViewTextItem"
                    android:text="@string/news" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/history_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_drawer_menu_height"
                android:layout_marginBottom="@dimen/navigation_view_indents"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/navViewImageItem"
                    app:srcCompat="@drawable/clock" />

                <TextView
                    android:textColor="@color/greyBackground"
                    style="@style/navViewTextItem"
                    android:text="@string/history" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ether_exchange_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_drawer_menu_height"
                android:layout_marginBottom="@dimen/navigation_view_indents"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/navViewImageItem"
                    app:srcCompat="@drawable/eth" />

                <TextView
                    android:textColor="@color/greyBackground"
                    style="@style/navViewTextItem"
                    android:text="@string/ether_exchange" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_ico_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_drawer_menu_height"
                android:layout_marginBottom="@dimen/navigation_view_indents"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    style="@style/navViewImageItem"
                    app:srcCompat="@drawable/leaf" />

                <TextView
                    android:textColor="@color/greyBackground"
                    style="@style/navViewTextItem"
                    android:text="@string/my_ico" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>