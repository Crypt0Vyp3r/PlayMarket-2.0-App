<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        tools:context="com.blockchain.store.playmarket.ui.invest_screen.InvestActivity">

        <include layout="@layout/detail_app_toolbar" />


        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="PlayMarket 2.0"
            android:textColor="@color/invest_main_color"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="A Decentralized App Store for Android \nmade with the Ethereum Blockchain"
            android:textColor="@color/invest_main_color"
            android:textSize="12sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Этап #2"
                android:textColor="@color/invest_main_color"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/5"
                android:textColor="@color/invest_main_color" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:src="@drawable/clock"
                android:tint="@color/invest_main_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28:15:22:54"
                android:textColor="@color/invest_main_color"
                android:textSize="24sp" />

        </LinearLayout>


        <ProgressBar
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:max="25500"
            android:progress="12750" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12750"
                android:textColor="@color/invest_main_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="25500"
                android:textColor="@color/invest_main_color"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Собрано, ETH"
                android:textColor="@color/invest_main_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="HardCap"
                android:textColor="@color/invest_main_color"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/invest_btn"
            style="@style/ColorButton"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_invest_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/invest_btn_text" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="ICO description"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="Успешно проведено preTGE собрано $165 000, всем участникам уже обменяли предварительные preTGE токены на основные токены TGE Разработана demo-версия продукта Интервью советнику Президента - Герману Клименко http://radio.mediametrics.ru/investment_in_ICO/54907/ Достигнуты договоренности с биржей CoinPlace на размещение токена после ICO Растущий рынок P2P кредитования: $300 000 000 000 к 2020 году по прогнозам Morgan Stanley Отработанные на практике механизмы скоринга и верификации заемщиков и привлечения капитала для выдачи кредитов Пристальное внимание к юридическим аспектам, проработанная легальная основа всех бизнес-процессов Гарантийный фонд: поручительства по займам, до 100% гарантии возврата благодаря токену SOFIN Защищенная от подделки кредитная история на базе блокчейн. Прозрачность системы для стороннего аудита Опытная команда, закрывающая все необходимые компетенции: более 40 специалистов для успешного старта проекта"
            android:textColor="@color/nav_text_color"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>