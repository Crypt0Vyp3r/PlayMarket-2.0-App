<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/exchange_dialog_large_margin"
    android:layout_marginRight="@dimen/exchange_dialog_large_margin"
    android:layout_marginTop="30dp"
    tools:context="com.blockchain.store.playmarket.ui.exchange_screen.exchange_confirm_fragment.ExchangeConfirmFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/exchange_activity_transaction_details" />

        <TextView
            style="@style/exchangeGrayText"
            android:layout_marginTop="24dp"
            android:text="@string/exchange_confirm_transaction" />

        <TextView
            style="@style/exchangeGrayText"
            android:id="@+id/address_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:padding="8dp"
            tools:text="d1ce561c07164639153e8540edaa769c89906181" />

        <ImageView
            android:id="@+id/address_qr"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp" />
    </LinearLayout>
</LinearLayout>
