<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        tools:background="@color/invest_main_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/invest_adviser_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/invest_text_color"
            android:textStyle="bold"
            tools:text="Александр Рубин" />

        <TextView
            android:id="@+id/invest_adviser_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="Основатель Glenwood Capital, финансист, эксперт в сфере инвестирования и управления капиталом за плечами которого 15 лет опыта в области и более 20 международных инвестиоционных проектов успешно завершенных при его непосредственном участии."
            android:textColor="@color/invest_text_color"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>