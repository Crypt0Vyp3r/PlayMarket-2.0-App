<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blockchain.store.playmarket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.blockchain.store.playmarket.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".ui.intro_logo_activity.IntroLogoActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login_prompt_activity.LoginPromptActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.account_management_activity.AccountManagementActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.new_user_welcome_activity.NewUserWelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.AppListActivity"
            android:label="@string/title_app_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.AppDetailActivity"
            android:label="@string/title_app_detail"
            android:parentActivityName=".ui.AppListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blockchain.store.playmarket.ui.AppListActivity" />
        </activity>
        <activity
            android:name=".ui.main_list_screen.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ui.permissions_prompt_activity.PermissionsPromptActivity"></activity>

        <service
            android:name="com.blockchain.store.playmarket.services.PurchaseVerifierService"
            android:exported="true"/>

    </application>

</manifest>