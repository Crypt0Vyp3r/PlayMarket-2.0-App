<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blockchain.store.playmarket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.blockchain.store.playmarket.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".ui.intro_logo_activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/whiteStatusBarStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login_prompt_activity.LoginPromptActivity"
            android:screenOrientation="portrait"
            android:theme="@style/whiteStatusBarStyle" />
        <activity
            android:name=".ui.account_management_activity.AccountManagementActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.new_user_welcome_activity.NewUserWelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/whiteStatusBarStyle" />
        <activity
            android:name=".ui.AppListActivity"
            android:label="@string/title_app_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.AppDetailActivityOld"
            android:label="@string/title_app_detail"
            android:parentActivityName=".ui.AppListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.main_list_screen.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.permissions_prompt_activity.PermissionsPromptActivity"
            android:theme="@style/whiteStatusBarStyle" />

        <service
            android:name=".services.PurchaseVerifierService"
            android:exported="true" />
        <service
            android:name=".services.DownloadService"
            android:exported="true" />

        <activity android:name=".ui.app_detail_screen.AppDetailActivity" />

        <receiver android:name=".broadcasts.InstallPackageReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_INSTALL" />
                <action android:name="android.intent.action.PACKAGE_ADDED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.search_screen.SearchActivity" />
        <activity android:name=".ui.settings_screen.SettingsActivity" />
        <activity android:name=".ui.library_screen.LibraryActivity" />
        <activity android:name=".ui.about_screen.AboutAppActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="c9546f35cbfcc932887cc4166668464f6715b155" />

        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <activity android:name=".ui.invest_screen.InvestActivity" />
    </application>

</manifest>